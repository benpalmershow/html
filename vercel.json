{
  "redirects": [
    {
      "source": "/(.*)/$",
      "destination": "/$1",
      "permanent": true
    },
    {
      "source": "/:path((?!news-feed\\.xml|news-sitemap\\.xml|robots\\.txt|sitemap\\.xml|site\\.webmanifest|sw\\.js).*)\\.html$",
      "destination": "/:path",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)(webp|jpg|png|gif|svg)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*).js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, max-age=0, must-revalidate"
        },
        {
          "key": "Pragma",
          "value": "no-cache"
        },
        {
          "key": "Expires",
          "value": "0"
        }
      ]
    },
    {
      "source": "/(.*).html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, max-age=0, must-revalidate"
        },
        {
          "key": "Pragma",
          "value": "no-cache"
        },
        {
          "key": "Expires",
          "value": "0"
        }
      ]
    },
    {
      "source": "/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}
